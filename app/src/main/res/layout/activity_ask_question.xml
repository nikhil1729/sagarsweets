<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:id="@+id/main"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Heading -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ask a Question"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="20dp"/>

        <!-- Info Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Have a question about this product? Ask here and weâ€™ll respond soon."
            android:textSize="14sp"
            android:textColor="#666666"
            android:paddingBottom="15dp"/>

        <!-- Email -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Email Address"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:layout_marginBottom="15dp"/>

        <!-- Question -->
        <EditText
            android:id="@+id/etQuestion"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:hint="Type your question here..."
            android:inputType="textMultiLine"
            android:gravity="top"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:layout_marginBottom="25dp"/>

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmitQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Question"
            android:textAllCaps="false"
            android:backgroundTint="@color/sagar_button"
            android:textColor="@color/white"/>

    </LinearLayout>

</ScrollView>
